{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prCreation": "immediate",
  "rebaseWhen": "conflicted",
  "rebaseLabel": "AC ‚Ä∫ Needs Rebase",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "üìÅ Dependency Dashboard",
  "dependencyDashboardLabels": ["üì∞ Progress Report"],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["Type ‚ó¶ Vulnerability"]
  },
  "labels": [
    "Type ‚ó¶ Dependency"
  ],
  "major": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "npm",
        "nvm"
      ],
      "addLabels": [
        "Type ‚ó¶ Dependency"
      ],
      "rangeStrategy": "pin"
    },
    {
      "matchManagers": [
        "npm",
        "nvm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "Type ‚ó¶ Git Action"
      ],
      "rangeStrategy": "pin"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false
    }
  ]
}
